<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/b_while"
        android:padding="10dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Cài đặt"
            android:textSize="30sp"
            android:gravity="center"
            android:textStyle="bold"
            />
        <RelativeLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >
            <TextView
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="Cỡ chữ "
                android:textSize="16sp"
                android:id="@+id/titleSize"
                android:gravity="center"
                android:textStyle="bold"
                />
            <RadioGroup
                android:id="@+id/textSizeRadioGroup"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_toEndOf="@+id/titleSize"
                >
                <RadioButton
                    android:id="@+id/radioSmall"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:text="Small"
                    android:layout_marginStart="10dp"
                    />
                <RadioButton
                    android:id="@+id/radioMedium"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:text="Medium"
                    android:layout_marginStart="10dp"
                    />
                <RadioButton
                    android:id="@+id/radioLarge"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:text="Large"
                    android:layout_marginStart="10dp"
                    />
            </RadioGroup>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="Cỡ chữ "
                android:textSize="16sp"
                android:id="@+id/titleBR"
                android:gravity="center"
                android:textStyle="bold"
                />
            <RadioGroup
                android:id="@+id/themeRadioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:layout_toEndOf="@+id/titleBR"
                >
                <RadioButton
                    android:id="@+id/radioDark"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Dark"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/black"
                    android:background="@color/white"
                    />
                <RadioButton
                    android:id="@+id/radioLight"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Light"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/white"
                    android:background="@color/black"
                    />
                <RadioButton
                    android:id="@+id/radioYellow"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Yellow"
                    android:layout_marginStart="10dp"
                    android:background="@color/yellow"
                    />
            </RadioGroup>
        </RelativeLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnUpdate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_btn_update"
            android:text="Cập nhật"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textColor="@color/white"
            />
    </LinearLayout>
</layout>
